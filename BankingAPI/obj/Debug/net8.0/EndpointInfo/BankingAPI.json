{
  "openapi": "3.0.1",
  "info": {
    "title": "BankingAPI",
    "version": "1.0"
  },
  "paths": {
    "/api/Beneficiaries": {
      "post": {
        "tags": [
          "Beneficiaries"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Beneficiary"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/Beneficiary"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/Beneficiary"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Beneficiaries/{customerCRN}": {
      "get": {
        "tags": [
          "Beneficiaries"
        ],
        "parameters": [
          {
            "name": "customerCRN",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Beneficiaries/update-status/{id}": {
      "put": {
        "tags": [
          "Beneficiaries"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "status",
            "in": "query",
            "schema": {
              "$ref": "#/components/schemas/BeneficiaryStatus"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/WeatherForecast": {
      "get": {
        "tags": [
          "WeatherForecast"
        ],
        "operationId": "GetWeatherForecast",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherForecast"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherForecast"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WeatherForecast"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Beneficiary": {
        "required": [
          "accountNumber",
          "bankName",
          "customerCRN",
          "ifsc",
          "nickName"
        ],
        "type": "object",
        "properties": {
          "beneficiaryId": {
            "type": "integer",
            "format": "int32"
          },
          "nickName": {
            "minLength": 1,
            "type": "string"
          },
          "accountNumber": {
            "minLength": 1,
            "type": "string"
          },
          "bankName": {
            "minLength": 1,
            "type": "string"
          },
          "ifsc": {
            "minLength": 1,
            "type": "string"
          },
          "customerCRN": {
            "minLength": 1,
            "type": "string"
          },
          "status": {
            "$ref": "#/components/schemas/BeneficiaryStatus"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "BeneficiaryStatus": {
        "enum": [
          0,
          1,
          2
        ],
        "type": "integer",
        "format": "int32"
      },
      "WeatherForecast": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "temperatureC": {
            "type": "integer",
            "format": "int32"
          },
          "temperatureF": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          },
          "summary": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}